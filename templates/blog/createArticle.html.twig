{% extends  'base.html.twig' %}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}


{% block    body %}
    <h2>Articles !!!</h2>



    {{ form_start(formArticle) }}



    {{ form_row(formArticle.TitreArticle,{'attr':  {'placeholder'  :   "Titre de l'article"}}) }}

    {{ form_row(formArticle.categorie) }}

    {{ form_row(formArticle.ContenuArticle,{'attr':  {'placeholder'  :   "Contenu de l'article"
    }}) }}

    {{ form_row(formArticle.ImageArticle,{'attr':  {'placeholder'  :   "URL de l'image",
        'type': "file"}}) }}

    <button type="submit" class="btn btn-success">
        {% if   editMode %}
            Enregistrer les modifications
        {% else %}
            Ajouter l'article
        {% endif %}

    </button>




    {{ form_end(formArticle) }}


{% endblock %}
